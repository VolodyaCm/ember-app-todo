<div class="card subgroup-list-block-scroll square scrollbar-pink bordered-pink thin">
    <div class="card-body">
        {{#each-in list as |key value|}}
            <div class="row">
                <div class="col">
                    <div class="subgroup-item {{if value.active 'active-sg'}}" id="{{key}}" onclick={{action "saveLocation" key value}}>
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        {{fa-icon "fas fa-object-group"}} {{value.subgroup}}
                                    </div>
                                    <div class="col">
                                        statistic
                                    </div>
                                </div>
                                <div class="row float-right">
                                    <div class="col">
                                        {{input type='button' value='details' class="btn btn-info"}}
                                        {{input type='button' value='edit' class="btn btn-danger"}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            no subgroups
        {{/each-in}}
    </div>
</div>
{{yield}}