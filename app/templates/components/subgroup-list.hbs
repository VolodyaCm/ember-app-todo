<div class="scrollmenu">
    {{#each-in list as |key value|}}
        <div class="subgroup-item {{if value.active 'active-sg'}}" id="{{key}}" onclick={{action "saveLocation" key value}}>
            <div class="row subgroup-item-row">
                <div class="col">
                    <div class="row subgroup-item-row">
                        <div class="col h5 c-5f666d">
                            {{fa-icon "fas fa-paper-plane"}}
                            <span class="badge badge-pill badge-light">{{value.subgroup}}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="progress subgroup-progress-bar">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        no subgroups
    {{/each-in}}
</div>
{{yield}}