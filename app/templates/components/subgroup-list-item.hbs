<div class="subgroup-item {{if subgroup.state 'active-sg'}}" id="{{subgroup.id}}" onclick={{action saveLocationForSubgroup subgroup.id subgroup}}>
  <div class="row subgroup-item-row">
    <div class="col">
      <div class="row subgroup-item-row">
        <div class="col h5 c-5f666d">
          {{fa-icon "fas fa-paper-plane"}}
          <span class="badge badge-pill badge-light">{{subgroup.name}}</span>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="progress subgroup-progress-bar">
            <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{yield}}